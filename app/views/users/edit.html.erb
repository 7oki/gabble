<% provide(:title, "プロフィール設定") %>
<h1>プロフィール設定画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <a href="http://gravatar.com/emails" target="_blank">ユーザーアイコンの変更</a>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
    </div>
    <div class='profile_edit'>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :'ユーザー名' %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :'プロフィール文'  %>
      <%= f.text_area :profile, class: 'form_control' %>

      <%= f.submit "設定を保存", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
