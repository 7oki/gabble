<% unless @user.id == 1 %>
<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "フォロー中", class: "btn" %>
<% end %>

<% else %>
<input type="submit" class="btn" value="フォロー中" disabled>
<% end %>